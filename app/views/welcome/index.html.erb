<%= form_with url: "/", method: :post, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <br>
  <br>
  <%= f.submit :'Submit' %>
<% end %>

<% if @search_field %>
  <h2> Merchant Matching '<%=@search_field%>' </h2>

  <%= link_to "#{@merchant.name}", "/merchants/#{@merchant.id}" %>

<% end %>
